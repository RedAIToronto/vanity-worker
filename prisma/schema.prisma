generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VanityMintPool {
  id             String   @id @default(cuid())
  publicKey      String   @unique
  encSecret      Bytes
  pattern        String
  caseSensitive  Boolean  @default(true)
  status         String   @default("ready") // ready | reserved | used | stale
  reservedUntil  DateTime?
  createdAt      DateTime @default(now())
  usedAt         DateTime?

  @@index([status])
  @@index([pattern, caseSensitive])
} 